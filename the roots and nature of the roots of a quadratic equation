#include<stdio.h>
#include<math.h>
int main(){
	double a,b,c;
	double discriminat,root1,root2,real,img;
	printf("Enter coefficients a, b and c: ");
	scanf("%lf",&a);
	scanf("%lf",&b);
	scanf("%lf",&c);
	discriminat = b*b-4*a*c;
	if (discriminat > 0){
	root1 = (-b + sqrt(discriminat))/(2*a);
	root2 = (-b - sqrt(discriminat))/(2*a);
	printf("root1 = %.2lf and root2 = %.2lf\n", root1, root2);
	}
	else if (discriminat==0){
		root1= root2 = -b/(2*a);
		printf("root1 = root2 = %.2lf",root1);
	}
	else{
		real= -b/(2*a);
		img= sqrt(-discriminat)/(2*a);
		printf("root1 = %.2lf+%.2lfi and root2 = %.2lf-%.2lfi",real,img,real,img);
		return 0;
	}
}



